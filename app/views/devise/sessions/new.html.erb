<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 shadow-md rounded-md w-96">
    <h2 class="text-2xl font-bold mb-4">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div class="flex flex-col">
        <%= f.label :email, class: "mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "p-2 border rounded-md mb-2" %>
      </div>

      <div class="flex flex-col">
        <%= f.label :password, class: "mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "p-2 border rounded-md mb-2" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-sm" %>
        </div>
      <% end %>

      <div class="mt-4">
        <%= f.submit "Log in", class: "bg-blue-500 text-white p-2 rounded-md cursor-pointer w-full" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
