<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 shadow-md rounded-md w-96 mx-auto">
    <h2 class="text-2xl font-bold mb-4">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex flex-col">
        <%= f.label :email, class: "mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "p-2 border rounded-md mb-2" %>
      </div>

      <div class="flex flex-col">
        <%= f.label :password, class: "mb-1" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-gray-500 mb-2">
            (<%= @minimum_password_length %> characters minimum)
          </p>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "p-2 border rounded-md mb-2" %>
      </div>

      <div class="flex flex-col">
        <%= f.label :password_confirmation, class: "mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "p-2 border rounded-md mb-2" %>
      </div>

      <div class="mt-4">
        <%= f.submit "Sign up", class: "bg-blue-500 text-white p-2 rounded-md cursor-pointer w-full" %>
      </div>
    <% end %>

    <div class="flex items-center justify-center mt-4"> <!-- Added this container for shared link login -->
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
