<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 shadow-md rounded-md w-96">
    <h2 class="text-2xl font-bold mb-4">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "p-2 border rounded-md w-full focus:outline-none focus:border-blue-500" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-4">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-bold mb-1" %> 
        <span class="text-sm italic mb-2 block">(leave blank if you don't want to change it)</span>
        <%= f.password_field :password, autocomplete: "new-password", class: "p-2 border rounded-md w-full focus:outline-none focus:border-blue-500" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-gray-500 mt-1"><em><%= @minimum_password_length %> characters minimum</em></p>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "p-2 border rounded-md w-full focus:outline-none focus:border-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :current_password, class: "block text-sm font-bold mb-1" %> 
        <span class="text-sm italic mb-2 block">(we need your current password to confirm your changes)</span>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "p-2 border rounded-md w-full focus:outline-none focus:border-blue-500" %>
      </div>

      <div class="mb-6">
        <%= f.submit "Update", class: "bg-blue-500 text-white p-2 rounded-md cursor-pointer w-full hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue" %>
      </div>
    <% end %>

    <div class="mb-4">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-red-500 hover:underline" %></div>

    <%= link_to "Back", :back, class: "text-gray-500 hover:underline" %>
  </div>
</div>
