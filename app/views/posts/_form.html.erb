<div class="flex flex-col items-center justify-center h-screen">
  <div class="bg-white p-6 rounded-lg shadow-lg">
    <%= form_with(model: @post, local: true) do |form| %>
      <% if @post.errors.any? %>
        <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <h2 class="font-bold text-lg mb-2"><%= @post.errors.count %> Error(s):</h2>
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li class="list-disc ml-5"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :title, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= form.text_field :title, id: :post_title, class: 'w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline' %>
      </div>

      <div class="mb-6">
        <%= form.label :content, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= form.text_area :content, id: :post_content, class: 'w-full h-32 px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline' %>
      </div>

      <div class="flex items-center justify-center mb-4">
        <%= form.submit class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      </div>
    <% end %>

    <div class="flex items-center justify-center mb-4" >
      <%= link_to 'Back', posts_path, class: 'text-gray-500 hover:text-gray-700 font-bold text-sm' %>
    </div>
  </div>
</div>
